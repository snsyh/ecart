</div>
<div class="field">
	<%= f.label :small_category_code %>
	<br>
	<%= f.text_field :small_category_code %>
</div>
<div class="field">
	<%= f.label :smalle_category_name %>
	<br>
	<%= f.text_field :small_category_name %>
</div>
<div class="field">
	<%= f.label :display_order %>
