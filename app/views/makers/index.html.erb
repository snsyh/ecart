<p id="notice"><%= notice %></p>

<h1>Listing Makers</h1>

<table>
  <thead>
    <tr>
      <th>Maker code</th>
      <th>Maker name</th>
      <th>Capital letter</th>
      <th>Display flg</th>
      <th>Display order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @makers.each do |maker| %>
      <tr>
        <td><%= maker.maker_code %></td>
        <td><%= maker.maker_name %></td>
        <td><%= maker.capital_letter %></td>
        <td><%= maker.display_flg.name %></td>
        <td><%= maker.display_order %></td>
        <td><%= link_to 'Show', maker %></td>
        <td><%= link_to 'Edit', edit_maker_path(maker) %></td>
        <td><%= link_to 'Destroy', maker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

