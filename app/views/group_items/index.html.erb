<p id="notice"><%= notice %></p>

<h1>Listing Group Items</h1>

<table>
  <thead>
    <tr>
      <th>Group item code</th>
      <th>Item code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @group_items.each do |group_item| %>
      <tr>
        <td><%= group_item.group_item_code %></td>
        <td><%= group_item.item_code %></td>
        <td><%= link_to 'Show', group_item %></td>
        <td><%= link_to 'Edit', edit_group_item_path(group_item) %></td>
        <td><%= link_to 'Destroy', group_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

