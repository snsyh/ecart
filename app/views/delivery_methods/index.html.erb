<p id="notice"><%= notice %></p>

<h1>Listing Delivery Methods</h1>

<table>
  <thead>
    <tr>
      <th>Delivery method code</th>
      <th>Delivery method name</th>
      <th>Shipping charge threshold prices</th>
      <th>Indivisually calculate flg</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @delivery_methods.each do |delivery_method| %>
      <tr>
        <td><%= delivery_method.delivery_method_code %></td>
        <td><%= delivery_method.delivery_method_name %></td>
        <td><%= delivery_method.shipping_charge_threshold_prices %></td>
        <td><%= delivery_method.indivisually_calculate_flg.name %></td>
        <td><%= link_to 'Show', delivery_method %></td>
        <td><%= link_to 'Edit', edit_delivery_method_path(delivery_method) %></td>
        <td><%= link_to 'Destroy', delivery_method, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

