<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th>Item code</th>
      <th>Item name</th>
      <th>Large category code</th>
      <th>Middle category code</th>
      <th>Small category code</th>
      <th>Sale flg</th>
      <th>Item type</th>
      <th>Delivery method code</th>
      <th>Stock management type</th>
      <th>Sale price</th>
      <th>Sale stock quantity</th>
      <th>Oneshot order limit</th>
      <th>Sale datetime from</th>
      <th>Sale datetime to</th>
      <th>Reservation price</th>
      <th>Reservation stock quantity</th>
      <th>Oneshot reservation limit</th>
      <th>Reservation datetime from</th>
      <th>Reservation datetime to</th>
      <th>Discount price</th>
      <th>Discount datetime from</th>
      <th>Discount datetime to</th>
      <th>Color code</th>
      <th>Size code</th>
      <th>Jan code</th>
      <th>Brand code</th>
      <th>Maker code</th>
      <th>Picking days</th>
      <th>Release date</th>
      <th>Targeted date comment</th>
      <th>Shipping time comment</th>
      <th>Bank wire</th>
      <th>Cash on delivery</th>
      <th>Credit card</th>
      <th>Convenience</th>
      <th>Average review score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.item_code %></td>
        <td><%= item.item_name %></td>
        <td><%= item.large_category_code %></td>
        <td><%= item.middle_category_code %></td>
        <td><%= item.small_category_code %></td>
        <td><%= item.sale_flg.name %></td>
        <td><%= item.item_type.name %></td>
        <td><%= item.delivery_method_code %></td>
        <td><%= item.stock_management_type.name %></td>
        <td><%= item.sale_price %></td>
        <td><%= item.sale_stock_quantity %></td>
        <td><%= item.oneshot_order_limit %></td>
        <td><%= item.sale_datetime_from %></td>
        <td><%= item.sale_datetime_to %></td>
        <td><%= item.reservation_price %></td>
        <td><%= item.reservation_stock_quantity %></td>
        <td><%= item.oneshot_reservation_limit %></td>
        <td><%= item.reservation_datetime_from %></td>
        <td><%= item.reservation_datetime_to %></td>
        <td><%= item.discount_price %></td>
        <td><%= item.discount_datetime_from %></td>
        <td><%= item.discount_datetime_to %></td>
        <td><%= item.color_code %></td>
        <td><%= item.size_code %></td>
        <td><%= item.jan_code %></td>
        <td><%= item.brand_code %></td>
        <td><%= item.maker_code %></td>
        <td><%= item.picking_days %></td>
        <td><%= item.release_date %></td>
        <td><%= item.targeted_date_comment %></td>
        <td><%= item.shipping_time_comment %></td>
        <td><%= item.bank_wire %></td>
        <td><%= item.cash_on_delivery %></td>
        <td><%= item.credit_card %></td>
        <td><%= item.convenience %></td>
        <td><%= item.average_review_score %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

